<form>
    <label name="subject"/>
    <field name="subject"/>
    <label name="code"/>
    <field name="code"/>
    <label name="activity_type"/>
    <field name="activity_type"/>
    <label name="employee"/>
    <field name="employee"/>
    <group id="date_time_label" col="2" xexpand="0" xfill="0">
        <label name="date" string="Date"/>
        <label name="time" string="&amp; Time:" xexpand="0" xfill="0"/>
    </group>
    <group id="date_time_duration" col="4">
        <group id="date_time" col="2">
            <field name="date"/>
            <field name="time" xexpand="1" xfill="1" xalign="1"/>
        </group>
        <label name="duration"/>
        <field name="duration"/>
    </group>
    <label name="dtend"/>
    <group id="duration" col="3">
        <field name="dtend" readonly="1"/>
        <label name="day_busy_hours"/>
        <field name="day_busy_hours"/>
    </group>
    <label name="party"/>
    <field name="party"/>
    <label name="resource"/>
    <field name="resource"/>
    <label name="location"/>
    <field name="location"/>
    <label name="origin"/>
    <field name="origin"/>
    <notebook>
        <page name="description">
            <field name="description" colspan="4" height="400" widget="block"/>
        </page>
    </notebook>
    <label name="state"/>
    <field name="state"/>
    <group id="buttons" col="-1" colspan="2">
        <button name="plan"/>
        <button name="do"/>
        <button name="cancel"/>
        <button name="activity_split"/>
    </group>
</form>
